# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120
insert_final_newline = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.postcss]
indent_size = 2

[*.md]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[*.sh]
indent_size = 2
